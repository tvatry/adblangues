{% extends 'basebackoffice.html.twig' %}

{% block content %}
    <div class="contenu">
        <section class="icon">
            <blockquote class="page_title">Ajout d'un utilisateur</blockquote>
            <div class="gestionPage">
                {{ form_start(form) }}
                {{ form_widget(form.username, { 'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
                <input class="emailUtilisateur" type="text" value="@promeo-formation.fr" disabled>
                {{ form_widget(form.roles, { 'attr': {'placeholder': 'Role'}}) }}

                {{ form_widget(form.AJOUTER, { 'attr': {'class': 'btn waves-effect promeo-bleu-darken'}, 'label': 'Valider'}) }}
                {{ form_end(form) }}
            </div>
        </section>
    </div>
{% endblock %}
