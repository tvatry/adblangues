{% extends 'basebackoffice.html.twig' %}
{% block content %}

<div class="contenu">
    <section class="icon">
        <span class="title">Centres</span>
        <table id="lvl" class="stripped">
            <thead>
            <tr>
                <th>Nom</th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>

            {% for centre in location %}
                <tr>
                <td>
                    {{ centre.name }}
                </td>
                <td>
                    <a href="{{ path('admin_locations_update', { 'id': centre.id })}}" class="btn waves-effect blue" name="validate"><i class="material-icons right">edit</i>MODIFIER</a>
                </td>
                <td>
                    <a href="{{ path('admin_locations_delete', { 'id': centre.id })}}" class="btn waves-effect red" name="validate"><i class="material-icons right">delete</i>SUPPRIMER</a>
                </td>
            </tr>
            {% endfor %}

            </tbody>
        </table>
        <a href="{{ path('admin_locations_create') }}" style="width: 175px;" class="btn waves-effect promeo-bleu-darken" name="validate"><i class="material-icons right">add</i>AJOUTER</a>
    </section>
</div>

{% endblock %}
